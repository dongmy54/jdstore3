	width: 16%;
	display: inline-block;
	line-height: 210px;
}

.product-quantity {
	width: 16%;
	display: inline-block;
}

.product-subtotal {
    width: 16%;
	display: inline-block;

}
.product-controller {
	width: 16%;
	display: inline-block;
}

