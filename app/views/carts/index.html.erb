<style media="screen">
.c-color-1 {
	background-color: #72632a;  /*黑浅*/
}

.c-color-2 {
	background-color: #FFFFF0;  /*白深*/
}

.c-color-3 {
	background-color: #483C32;  /*黑深*/
}

.c-color-4 {
	background-color: #FFFDD0;  /*黑深*/

}

.carts {
	height: 50px;
	text-align: center;
	border: 1px solid #e8e8e8;
	font-weight: 200px;
	font-size: 16px;	
}

.label-image {
	width: 32%;
	line-height: 45px;
	display: inline-block;

}

.label-price,.label-controller,.label-quantity,.label-subtotal {
	width: 16%;
	line-height: 50px;
	display: inline-block;
}


