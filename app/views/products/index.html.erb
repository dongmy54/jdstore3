<div class="container">
<div class="bg-index">
	<div class="btn bg-index-button active">沙发</div>
	<div class="btn bg-index-button">床</div>
	<div class="btn bg-index-button">座椅</div>
</div>
<div class="row">
	<% @products.each do |product| %>
	<div class="col-xs-6 col-md-3">
	  <div class="pro-index">
		<%= link_to product_path(product) do %>
		<% if product.photos.present? %>
		  <%= image_tag(product.photos[0].image.thumb.url ) %>
		  <% else %>
		  <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
		  <% end %>
		  <% end %>
		  <div class="pro-index-font">
		   <div style="color: red">￥<%= product.price %></div>
		 
		   		<%= link_to(product.description, product_path(product)) %> 
		  </div>
		 </div>
	</div>
	<% end %>
</div>



</div>