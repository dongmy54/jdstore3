<div>
  <br>
  <% if @products.blank? %>
    <br>
    <h2 class="search-info-title">搜索信息不能为空，或者您搜索的商品不存在</h2>
  <% else %>
    <h2 class="search-info-title"> 有关"<%= @query_string %>"的商品信息 </h2>
    <div class="search-result">

      <div class="row jobs-show0"></div>
      <div class="job-table">
        <% @products.each do |product| %>
        <div class="row jobs-show">
          <div class="col-md-12 col-lg-9 col-lg-offset-1">
            <div class="col-xs-6 col-md-3">
          		<%= link_to product_path(product) do %>
          		<% if product.image.present? %>
          		  <%= image_tag(product.image.thumb.url, class: "thumbnail") %>
          		  <% else %>
          		  <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
          		  <% end %>
          		  <% end %>
          		  <%= product.title %> ￥<%= product.price %>
          	</div>
            <div class="pull-right">
              发布时间：<%= product.created_at.to_date %>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
    <div class="text-center">
      <%= will_paginate(@products, renderer: BootstrapPagination::Rails) %>
    </div>
  <% end %>
</div>
