<style type="text/css">
 
 .panel-footer {
    list-style-type: none; /*去掉清单样式*/
 } 

 .form-actions .btn:hover
{
background-color:red !important;
}  

</style>

<div class="x-hidden">
<img src="https://ww2.sinaimg.cn/large/006tNbRwgy1fd1ynwsajcj315o0m8ttf.jpg" />
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="container signup-hero">
    <div class="row">
        <div class="col-md-4 col-md-offset-7">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <span class="glyphicon glyphicon-lock"></span>欢迎登录ILIFE商城！</div>
                <div class="panel-body">
                    <form class="form-horizontal" role="form">
                      <div class="form-inputs">
                        <%= f.input :email, required: false, autofocus: true, :label => "您的邮箱：" %>
                        <%= f.input :password, required: false, :label => "密码：" %>
                        <%= rucaptcha_image_tag(alt: 'Captcha') %>
                        <%= rucaptcha_input_tag(class: 'form-control', placeholder: '请输入验证码') %>
                        <div style="float: left;">
                        <%= f.input :remember_me,:label => "记住我", as: :boolean if devise_mapping.rememberable?%>
                        </div>
                        <div style="float: right;margin-top: 5px;">
                                                <button type="reset" class="btn btn-default btn-sm ">重置</button>
                                                </div>

                      </div>
                      <div class="form-actions" >
                        <%= f.submit "登录", class: "btn btn-primary",:style => "border: none;color:white;width:100%;background-color:#ea4a1c;border-radius:50px;font-size:16px;" %>
                      </div>
                    </form>
                </div>

                <div class="panel-footer" style="text-align: center;">
                    <li><a href="/users/sign_up">注册新用户</a></li>
                    <li><a href="/users/password/new">寻回密码</a></li>
                </div>
            </div>
        </div>
    </div>
</div>
<% end %>
</div>